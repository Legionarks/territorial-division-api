{
  "compilerOptions": {
    "paths": {
      "@modules/*": [
        "./src/modules/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  }
}
